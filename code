                <div class="quiz-controls">
                    <button class="btn" id="submit-quiz" onclick="submitQuiz()" disabled>Submit Quiz</button>
                    <button class="btn" id="reset-quiz" onclick="resetQuiz()">Reset Quiz</button>
                </div>
                <div id="quiz-score" style="display: none;"></div>
