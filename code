    <script>
        // Global variables
        let currentSlideIndex = 0;
        let autoSlideInterval;
        let quizData = [
            {
                question: "What does CSS stand for?",
                options: ["Creative Style Sheets", "Cascading Style Sheets", "Computer Style Sheets", "Colorful Style Sheets"],
                correct: 1
            },
            {
                question: "Which JavaScript method is used to add an element to the end of an array?",
                options: ["push()", "pop()", "shift()", "unshift()"],
                correct: 0
            },
            {
                question: "What is the purpose of media queries in CSS?",
                options: ["To query databases", "To create responsive designs", "To handle user input", "To manage cookies"],
                correct: 1
            },
            {
                question: "Which HTTP method is used to retrieve data from an API?",
                options: ["POST", "PUT", "DELETE", "GET"],
                correct: 3
            }
        ];
        let userAnswers = [];

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            updateDeviceInfo();
            generateQuiz();
            
            // Update device info on resize
            window.addEventListener('resize', updateDeviceInfo);
        });

        // Section Navigation
        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.nav-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected section
            document.getElementById(sectionId).classList.add('active');
            
            // Add active class to clicked tab
            event.target.classList.add('active');
        }

        // Responsive Design Functions
        function updateDeviceInfo() {
            const screenWidth = screen.width;
            const viewportWidth = window.innerWidth;
            const userAgent = navigator.userAgent;
            const touchSupport = 'ontouchstart' in window ? 'Yes' : 'No';
            const orientation = window.innerHeight > window.innerWidth ? 'Portrait' : 'Landscape';
            
            let deviceType = 'Desktop';
            if (viewportWidth <= 480) deviceType = 'Mobile';
            else if (viewportWidth <= 768) deviceType = 'Tablet';
            
            document.getElementById('screen-width').textContent = screenWidth;
            document.getElementById('viewport-width').textContent = viewportWidth;
            document.getElementById('device-type').textContent = deviceType;
            document.getElementById('orientation').textContent = orientation;
            document.getElementById('user-agent').textContent = userAgent.split(' ')[0];
            document.getElementById('touch-support').textContent = touchSupport;
        }

        // Quiz Functions
        function generateQuiz() {
            const container = document.getElementById('quiz-questions');
            container.innerHTML = '';
            
            quizData.forEach((item, index) => {
                const questionDiv = document.createElement('div');
                questionDiv.className = 'question';
                questionDiv.innerHTML = `
                    <h3>Question ${index + 1}</h3>
                    <p>${item.question}</p>
                    <div class="options">
                        ${item.options.map((option, optionIndex) => `
                            <div class="option" onclick="selectOption(${index}, ${optionIndex})">
                                ${option}
                            </div>
                        `).join('')}
                    </div>
                `;
                container.appendChild(questionDiv);
            });
        }

        function selectOption(questionIndex, optionIndex) {
            const question = document.querySelectorAll('.question')[questionIndex];
            const options = question.querySelectorAll('.option');
            
            // Remove previous selection
            options.forEach(option => option.classList.remove('selected'));
            
            // Add selection to clicked option
            options[optionIndex].classList.add('selected');
            
            // Store user answer
            userAnswers[questionIndex] = optionInd
