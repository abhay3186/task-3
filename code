            <button class="nav-tab" onclick="showSection('carousel')">Image Carousel</button>
            <button class="nav-tab" onclick="showSection('api')">API Data</button>
        </div>

        <!-- Responsive Design Section -->
        <div id="responsive" class="content-section active">
            <h2>Responsive Design with Media Queries</h2>
            <p>This section demonstrates responsive design that adapts to different screen sizes.</p>
            
            <div class="responsive-demo">
                <div class="demo-card">
                    <h3>Desktop View</h3>
                    <p>Large screens show multiple columns and expanded content.</p>
                    <div class="device-info">
                        <strong>Screen Width:</strong> <span id="screen-width"></span>px<br>
                        <strong>Device Type:</strong> <span id="device-type"></span>
                    </div>
                </div>
                <div class="demo-card">
                    <h3>Tablet View</h3>
                    <p>Medium screens adapt layout for touch interaction.</p>
                    <div class="device-info">
                        <strong>Viewport:</strong> <span id="viewport-width"></span>px<br>
                        <strong>Orientation:</strong> <span id="orientation"></span>
                    </div>
                </div>
                <div class="demo-card">
                    <h3>Mobile View</h3>
                    <p>Small screens stack content vertically for optimal viewing.</p>
                    <div class="device-info">
                        <strong>User Agent:</strong> <span id="user-agent"></span><br>
